pipeline {
    agent {
        label 'Dockerize'
    }
    options {
        disableConcurrentBuilds()
        timestamps()
        timeout(time: 1, unit: 'HOURS')
    }
    stages {
        stage('Dockerize') {
            steps {
                container('docker') {
                    echo 'Dockerizing the application...'
                    sh("wget ${env.JENKINS_URL}/job/$jobName/$buildNumber/artifact/$artifactName")
                    sh 'ls -l'
                }
            }
        }
    }
}
